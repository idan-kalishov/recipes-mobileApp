<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="#E0E0E0" /> <!-- Light gray color -->

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#B0BEC5" /> <!-- Slightly darker gray -->

    <!-- Padding inside the shape -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
